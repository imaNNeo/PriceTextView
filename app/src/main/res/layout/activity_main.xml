<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.neo.pricetextview.PriceTextView
        android:id="@+id/priceTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#a3a3a3"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="94dp"
        />

    <View
        android:id="@+id/view_separator1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/priceTextView"
        android:layout_marginTop="32dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        />

    <Button
        android:id="@+id/btn_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_separator1"
        app:layout_constraintRight_toLeftOf="@id/btn_2"
        app:layout_constraintBottom_toTopOf="@id/btn_4"
        app:layout_constraintVertical_chainStyle="packed"
        />

    <Button
        android:id="@+id/btn_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="2"
        app:layout_constraintTop_toTopOf="@id/btn_1"
        app:layout_constraintBottom_toBottomOf="@id/btn_1"
        app:layout_constraintLeft_toRightOf="@id/btn_1"
        app:layout_constraintRight_toLeftOf="@id/btn_3"
        />

    <Button
        android:id="@+id/btn_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="3"
        app:layout_constraintTop_toTopOf="@id/btn_2"
        app:layout_constraintBottom_toBottomOf="@id/btn_2"
        app:layout_constraintLeft_toRightOf="@id/btn_2"
        app:layout_constraintRight_toRightOf="parent"
        />

    <Button
        android:id="@+id/btn_4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="4"
        app:layout_constraintTop_toBottomOf="@id/btn_1"
        app:layout_constraintLeft_toLeftOf="@id/btn_1"
        app:layout_constraintRight_toLeftOf="@id/btn_5"
        app:layout_constraintBottom_toTopOf="@id/btn_7"
        />

    <Button
        android:id="@+id/btn_5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="5"
        app:layout_constraintLeft_toRightOf="@id/btn_4"
        app:layout_constraintTop_toTopOf="@id/btn_4"
        app:layout_constraintBottom_toBottomOf="@id/btn_4"
        app:layout_constraintRight_toLeftOf="@id/btn_6"
        />

    <Button
        android:id="@+id/btn_6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="6"
        app:layout_constraintLeft_toRightOf="@id/btn_5"
        app:layout_constraintTop_toTopOf="@id/btn_5"
        app:layout_constraintBottom_toBottomOf="@id/btn_5"
        app:layout_constraintRight_toRightOf="@id/btn_3"
        />

    <Button
        android:id="@+id/btn_7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="7"
        app:layout_constraintTop_toBottomOf="@id/btn_4"
        app:layout_constraintLeft_toLeftOf="@id/btn_4"
        app:layout_constraintRight_toLeftOf="@id/btn_8"
        app:layout_constraintBottom_toTopOf="@id/btn_0"
        />

    <Button
        android:id="@+id/btn_8"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="8"
        app:layout_constraintLeft_toRightOf="@id/btn_7"
        app:layout_constraintTop_toTopOf="@id/btn_7"
        app:layout_constraintBottom_toBottomOf="@id/btn_7"
        app:layout_constraintRight_toLeftOf="@id/btn_9"
        />

    <Button
        android:id="@+id/btn_9"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="9"
        app:layout_constraintLeft_toRightOf="@id/btn_8"
        app:layout_constraintTop_toTopOf="@id/btn_8"
        app:layout_constraintBottom_toBottomOf="@id/btn_8"
        app:layout_constraintRight_toRightOf="@id/btn_6"
        />

    <Button
        android:id="@+id/btn_0"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="0"
        app:layout_constraintLeft_toLeftOf="@id/btn_8"
        app:layout_constraintTop_toBottomOf="@id/btn_7"
        app:layout_constraintRight_toLeftOf="@id/btn_back"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <Button
        android:id="@+id/btn_back"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="delete"
        app:layout_constraintTop_toTopOf="@id/btn_0"
        app:layout_constraintBottom_toBottomOf="@id/btn_0"
        app:layout_constraintLeft_toRightOf="@id/btn_0"
        app:layout_constraintRight_toRightOf="@id/btn_9"
        />

</android.support.constraint.ConstraintLayout>